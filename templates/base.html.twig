<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title> {{ app.environment }}
        {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/body.css') }}">
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <div id="top_header">
                <a id="left_top_header" href="{{ path('home')}}">
                    <div id="eforum"><span id="E">E</span>-FORUM</div>
                    <div id="lfde">Le forum des entrepreneurs</div>
                </a>
                <div id="right_top_header">
                    <form class="search-box" action="{{path('search')}}" method="POST">
                        <input autocomplete="off" type="text" placeholder="Rechercher" class="search-input" name="key">
                        <button type="submit" class="search-btn"><img src="{{ asset('img/search_icon.png')}}" alt="search_icon.png"></button>
                    </form>
                    {% if app.user %}
                    <div class="js-dropdown dropdown-notif">
                        <button onclick="notifDropdownToggle();" class="notif-icon" id="notif-btn"><img src="{{ asset('img/notif_icon.png')}}" alt="notif_icon.png"></button>
                            <ul class="notif-group"></ul>                        
                    </div>
                    {% endif %}
                    <div class="js-dropdown dropdown-account">
                        <button onclick="accountDropdownToggle();" class="account-icon" id="accout-btn"><img src="{{ asset('img/account_icon.png')}}" alt="account_icon.png"></button>
                        {% if app.user %}
                            <ul>
                                <span><img src="{{ asset('img/account_icon.png') }}" alt="profil_picture.png"></span>
                                <h1>{{ app.user.firstName}} {{ app.user.lastName }}</h1>
                                <a href="{{ path('my_account') }}">Mon profil</a>
                                <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </ul>
                        {% else %}
                            <ul>
                                <a href="{{ path('app_login') }}">Connexion</a>
                                <a href="{{ path('registration') }}">Inscription</a>
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            <nav>
                <a class="nav-link" href="{{ path('list_posts') }}">Les plus récents</a>
                <div class="dropdown-div">
                    <a class="dropdown-btn" href="{{ path('list_posts', {catName:"Investissements"})}}">Investissements</a>
                    <div class="dropdown-item">
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Bourse",catName:"Investissements"}) }}">Bourse</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Crypto-monnaies",catName:"Investissements"})}}">Crypto-monnaies</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Immobilier",catName:"Investissements"})}}">Immobilier</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Autres",catName:"Investissements"})}}">Autres</a>
                    </div>
                </div>
                <div class="dropdown-div">
                    <a class="dropdown-btn" href="{{ path('list_posts', {catName:"Entreprenariat"})}}">Entreprenariat</a>
                    <div class="dropdown-item">
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Création d'entreprise",catName:"Entreprenariat"}) }}">Bourse</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Comptabilité",catName:"Entreprenariat"})}}">Comptabilité</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Autres",catName:"Entreprenariat"})}}">Autres</a>
                    </div>
                </div>
                <div class="dropdown-div">
                    <a class="dropdown-btn" href="{{ path('list_posts', {catName:"Communication"})}}">Communication</a>
                    <div class="dropdown-item">
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Marketing",catName:"Communication"}) }}">Marketing</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Feedback",catName:"Communication"})}}">Feedback</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Autres",catName:"Communication"})}}">Autres</a>
                    </div>
                </div>
                <div class="dropdown-div">
                    <a class="dropdown-btn" href="{{ path('list_posts', {catName:"Management"})}}">Management</a>
                    <div class="dropdown-item">
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Gestion managériale",catName:"Management"}) }}">Gestion managériale</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Relations humaines",catName:"Management"})}}">Relations humaines</a>
                        <a class="dropdown-link" href="{{path('list_posts', {subCatName:"Gestion du stress",catName:"Management"})}}">Gestion du stress</a>
                    </div>
                </div>
                <a class="nav-link" id="new_post" href="{{ path('create_post') }}">Nouveau post</a>
            </nav>
        </header>   
        <div class="page-content">
            {% block body %}{% endblock %}
        </div>
        <footer>
            <p class="lead">Nik la peau lisse. All right reserved</p>
            <hr class="my-4">
            <div>
                <a href="#">Contacts</a>
                <a href="#">Données personnelles</a>
                <a href="http://gdn.cyrillestr.com">BigMuscle</a>
            </div>
        </footer>
        <div hidden>
            {% block data %}{% endblock %}
        </div>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script>
            const dropdownAccount = document.querySelector('.dropdown-account');

            function accountDropdownToggle(){
                dropdownAccount.classList.toggle('active');
            }

            {% if app.user %}
                const dropdownNotif = document.querySelector('.dropdown-notif');
                function notifDropdownToggle(){
                    dropdownNotif.classList.toggle('active');
                }
            {% endif %}

        </script>
        {% if app.user %}
            <script src="{{ asset('js/base.js') }}"></script>
        {% endif %}
        {% block javascripts %}{% endblock %}
    </body>
    
</html>
